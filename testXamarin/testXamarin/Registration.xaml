<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testXamarin.Registration"
             Title="Registration">
    <ContentPage.Content>
        <StackLayout>
            <Editor 
                x:Name="email" 
                Text="email"
                Focused="email_Focused"
                />
            <Editor 
                x:Name="password"        
                Text="password"
                Focused="password_Focused"
                />
            <Label 
                x:Name="terms"
                Text="Read Terms of service"/>
            <Label 
                x:Name="policy"
                Text="Read Privacy policy"/>
            <Button 
                Text="Registration - I agree to the Terms of service and privacy policy" 
                Clicked="Button_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>